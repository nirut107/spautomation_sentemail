generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int     @id @default(autoincrement())
  taxId     String  @unique
  name      String
  emails    String[]
}

model Quotation {
  id        Int     @id @default(autoincrement())
  taxId     String
  company   String
  QID       String  @unique
  MID       String
  subject   String
}

model Invoice {
  id        Int     @id @default(autoincrement())
  OID       String
  IID       String 
  MID       String
  subject   String
}

model Reciept {
  id        Int     @id @default(autoincrement())
  IID       String
  RID       String
  MID       String
  subject   String
}

model GmailToken {
  id           Int      @id @default(autoincrement())
  accessToken  String
  refreshToken String
  expiresAt    DateTime
}


